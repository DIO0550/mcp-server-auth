{
  "name": "mcp-server-auth-dev",
  "dockerComposeFile": ["../docker/docker-compose.dev.yml"],
  "service": "dev",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    }
  },
  "forwardPorts": [3000, 3001, 3002, 3003, 3306],
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "streetsidesoftware.code-spell-checker",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "remoteEnv": {
    "NODE_ENV": "development",
    "GITHUB_TOKEN": "${localEnv:GITHUB_PERSONAL_ACCESS_TOKEN}"
  },
  "postCreateCommand": "bash /workspace/docker/shared/post-create.sh"
}
